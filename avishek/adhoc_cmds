4.
---
- name: install the latest version of Apache
  hosts: webservers
  tasks:
  - name : install httpd
    apt: name=apache2
  - name: start the httpd service
    service: name=apache2 state=started
7.
- name: install git repository
  hosts: webserver
  tasks:
  - yum:
    name: git
    state: latest
